class Solution {
public:
    bool validColouring(vector<vector<int>>& gr, vector<int>& colour, int node, int col){
        if(colour[node] != 0)
            return (colour[node] == col);

        colour[node] = col;
        for(int ne : gr[node]){
            if(!validColouring(gr, colour, ne, -col))
                return false;
        }

        return true;
    }

    bool isBipartite(vector<vector<int>>& gr) {
        int n = gr.size();
        vector<int> c(n, 0);

        for(int node = 0; node < n; node++){
            if(c[node]==0 && !validColouring(gr, c, node, 1))
                return false;
        }

        return true;
    }
};
